<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
   <ImageView
       android:id="@+id/detailimg"
       android:scaleType="fitXY"
       android:layout_width="match_parent"
       android:layout_height="200dp">
   </ImageView>
    <TextView
        android:id="@+id/titename"
        android:layout_marginTop="15dp"
        android:padding="10sp"
        android:layout_marginLeft="20dp"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:text="Durgmati -The Myth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/titename1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:padding="5dp"
        android:textColor="@android:color/holo_blue_bright"
        android:text="prime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/titename2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:text="Watch for Rs0 wiht prime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
   <LinearLayout
       android:background="@color/bg"
       android:orientation="vertical"
       android:layout_margin="10dp"
       android:layout_width="match_parent"
       android:layout_height="90dp">
       <TextView
           android:padding="5dp"
           android:textSize="20dp"
           android:layout_marginTop="15dp"
           android:text="Watch with Prime"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       </TextView>
       <TextView
           android:textSize="15dp"
           android:text="Start yoyu 30-day free trail"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       </TextView>
   </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="5dp"
            android:src="@drawable/ic_baseline_play_circle_outline_24"
            android:layout_width="60dp"
            android:layout_height="60dp">
        </ImageView>
        <ImageView
            android:layout_margin="5dp"
            android:src="@drawable/ic_baseline_add_circle_outline_24"
            android:layout_width="60dp"
            android:layout_height="60dp">
        </ImageView>
        <ImageView
            android:layout_margin="5dp"
            android:src="@drawable/ic_baseline_share_24"
            android:layout_width="60dp"
            android:layout_height="60dp">
        </ImageView>
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:background="@color/cardview_dark_background"
        app:tabIndicatorColor="@color/white"
        android:layout_marginTop="10sp"
        android:id="@+id/detailstab"
        app:tabTextColor="@color/white"
        app:tabMode="fixed"
        app:tabGravity="fill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/detailpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>